# Responsive hero images - critical LCP resources with 1 week cache + Brotli
/assets/hero-small.webp
  Cache-Control: public, max-age=604800, immutable
  Content-Encoding: br

/assets/hero-medium.webp
  Cache-Control: public, max-age=604800, immutable
  Content-Encoding: br

/assets/hero-large.webp
  Cache-Control: public, max-age=604800, immutable
  Content-Encoding: br

# Cache all static assets for 1 year with Brotli compression
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: br

# JS and CSS with compression
/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: br

/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: br

# Cache images for 1 year with compression
/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: br

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: br

/*.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: br

/*.webp
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: br

/*.svg
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Cache PDF for 1 week
/*.pdf
  Cache-Control: public, max-age=604800

# HTML files - no cache
/*.html
  Cache-Control: public, max-age=0, must-revalidate

/
  Cache-Control: public, max-age=0, must-revalidate
